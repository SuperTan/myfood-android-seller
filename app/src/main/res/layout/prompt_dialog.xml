<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="170dp"
    android:background="@drawable/dialog_title">

    <TextView
        android:id="@+id/tv_the_clues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:text="@string/verification_code_error"
        android:textColor="@color/color_3B3E3D" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="22dp"
        android:background="@drawable/dishes_edit_nor"
        android:text="取消"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="18dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/dishes_edit_sel"
        android:text="确定"
        android:textSize="12sp" />

</RelativeLayout>



